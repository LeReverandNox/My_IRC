    <script src="js/lib/angular-material/angular-material.js"></script>
    <!--Angular UI Router-->
    <script src="js/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <!--Socket.IO-->
    <script src="socket.io/socket.io.js"></script>
    <!--Angular Socket.IO-->
    <script src="js/lib/angular-socket-io/socket.js"></script>
    <!--Angular-scroll-glue-->
    <script src="js/lib/angular-scroll-glue/src/scrollglue.js"></script>
    <!--Angular Sanitize-->
    <script src="js/lib/angular-sanitize/angular-sanitize.js"></script>
    <!--Youtube-->
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="js/lib/angular-youtube-mb/src/angular-youtube-embed.js"></script>
    <!--Angular Web Notifications-->
    <script src="js/lib/html5-desktop-notifications2/dist/Notification.js/"></script>
