<!DOCTYPE html>
<html lang="en" ng-app="my_irc" ng-controller="Title as T">
<head>
    <meta charset="UTF-8">
    <title>{{ T.appTitle }} {{ T.unreadCount > 0 ? "(" + T.unreadCount + ")" : "" }}</title>
    <base href="/">

    <%if (applicationEnv === "production") { %>
     <!--LIB -->
     <!--Angular -->
    <script src="js/lib/angular/angular.min.js"></script>
    <!-- Angular Material-->
    <script src="js/lib/angular-animate/angular-animate.min.js"></script>
    <script src="js/lib/angular-aria/angular-aria.min.js"></script>
    <script src="js/lib/angular-messages/angular-messages.min.js"></script>
    <script src="js/lib/angular-material/angular-material.min.js"></script>
    <!--Angular UI Router-->
    <script src="js/lib/angular-ui-router/release/angular-ui-router.min.js"></script>
    <!--Socket.IO-->
    <script src="socket.io/socket.io.js"></script>
    <!--Angular Socket.IO-->
    <script src="js/lib/angular-socket-io/socket.min.js"></script>
    <!--Angular-scroll-glue-->
    <script src="js/lib/angular-scroll-glue/src/scrollglue.js"></script>
    <!--Angular Sanitize-->
    <script src="js/lib/angular-sanitize/angular-sanitize.min.js"></script>
    <!--Youtube-->
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="js/lib/angular-youtube-mb/dist/angular-youtube-embed.min.js"></script>
    <!--Angular Web Notifications-->
    <script src="js/lib/html5-desktop-notifications2/dist/Notification.js/"></script>
    <script src="js/lib/simple-web-notification/web-notification.js"></script>
    <script src="js/lib/angular-web-notification/angular-web-notification.js"></script>

    <!-- STYLE -->
    <!--Angular Material CSS Sheet-->
    <link rel="stylesheet" href="js/lib/angular-material/angular-material.min.css">
    <!-- Material Font Icons set-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Own CSS Sheet-->
    <link rel="stylesheet" href="css/style.min.css">

    <!-- MY_IRC -->
    <script src="js/app/my_irc.min.js"></script>
    <% } %>

    <%if (applicationEnv === "development") { %>
    <!--LIB -->
    <!--Angular -->
    <script src="js/lib/angular/angular.js"></script>
    <!-- Angular Material-->
    <script src="js/lib/angular-animate/angular-animate.js"></script>
