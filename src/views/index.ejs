    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Own CSS Sheet-->
    <link rel="stylesheet" href="css/style.css">

    <!-- MY_IRC -->
    <!--Module and configs -->
    <script src="js/app/my_irc.module.js"></script>
    <script src="js/app/my_irc.route.js"></script>
    <script src="js/app/config/material.config.js"></script>
    <!--Services-->
    <script src="js/app/services/formatter.service.js"></script>
    <script src="js/app/services/socket.service.js"></script>
    <script src="js/app/services/index-irc.service.js"></script>
    <script src="js/app/services/channels-irc.service.js"></script>
    <script src="js/app/services/messages-irc.service.js"></script>
    <script src="js/app/services/commands-parser.service.js"></script>
    <script src="js/app/services/commands.service.js"></script>
